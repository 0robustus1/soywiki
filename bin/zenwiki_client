#!/usr/bin/env ruby
require 'drb'
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), 'lib')
wiki = Zenwiki::Server.new 
method = ARGV.shift
begin
  if method == 'save_page' 
    text = STDIN.read
    puts wiki.send(method, text)
  else
    puts wiki.send(method, *ARGV)
  end
rescue
  puts ["Method: #{method}", $!.inspect, $!.backtrace.join("\n")].join("\n")
end

